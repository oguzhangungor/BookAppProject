<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="135dp"
    android:layout_height="180dp"
    android:background="@color/bgcolor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bgcolor">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:gravity="center"
            android:src="@drawable/sally" />

        <TextView
            android:id="@+id/populer_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/aileronregular"
            android:textSize="12dp"
            android:text="Vegan"
            android:textColor="#33474e"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/populer_textview_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/populer_textview_title"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/aileronregular"
            android:textSize="11dp"
            android:text="Sally"
            android:textColor="#afafaf"


            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>